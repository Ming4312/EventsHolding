<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/eventName"
        android:text="EventTitle"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/eventLocation"
        android:textSize="25dp"
        android:text="EventLocation"
        android:layout_alignLeft="@id/eventName"
        android:layout_below="@id/eventName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/eventDate"
        android:textSize="25dp"
        android:text="EventDate"
        android:layout_alignLeft="@id/eventLocation"
        android:layout_below="@id/eventLocation"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/eventImage"
        android:layout_toLeftOf="@id/eventName"
        android:src="@drawable/ic_menu_send"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp" />
</RelativeLayout>