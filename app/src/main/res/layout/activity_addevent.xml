<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Event Name:"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/adding_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Event Location:"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/adding_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/googlemap"
                android:text="search by Google Map"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Add the event poster:"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/adding_event_poster"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <TextView
                android:text="Event date:"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <DatePicker
                android:id="@+id/adding_event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></DatePicker>
            <Button
                android:id="@+id/adding_event_submit"
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>




</LinearLayout>